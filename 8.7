total_rashodi = 0
total_dohodi = 0
for numm in range(9):
  total_dohodi += educational_grant
  expenses = expenses + expenses * 0.03
  total_rashodi += expenses 
print('Попросить у родителей: ', (total_rashodi + summ) - (total_dohodi + educational_grant))
